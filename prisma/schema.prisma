datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  image        String? 
  lastLoggedIn DateTime
  feelings     Feeling[]
}

model Feeling {
  id        Int       @id @default(autoincrement())
  userId    Int
  date      DateTime  @default(now())
  mood      Mood
  user      User      @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}

enum Mood {
  HAPPY
  NORMAL
  SAD
}
